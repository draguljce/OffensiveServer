<?xml version="1.0" encoding="utf-8"?> 
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping> 
	<class name="offensive.Server.Hybernate.POJO.PlayerGameRecord" table="Played">  
		<many-to-one name="game" column="Game" class="offensive.Server.Hybernate.POJO.CompletedGame"/>
		<many-to-one name="player" column="player" class="offensive.Server.Hybernate.POJO.Player"/>
		<one-to-one name="PlayerStatistics" column="PlayerStatistics" class="offensive.Server.Hybernate.POJO.PlayerStatistics"/>  
	</class> 
</hibernate-mapping>